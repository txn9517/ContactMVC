@model ContactMVC.Models.EmailData

@{
    ViewData["Title"] = "Email Category";
}

<!-- Email Category -->

<h1 class="mt-5">Email Category: @Model.GroupName</h1>
<div class="p-2">
    <form asp-action="EmailCategory" asp-controller="Categories" method="post">
        <input type="hidden" asp-for="@Model.GroupName" />
        <div class="row row-cols-1 row-cols-md-2 g-3 mb-3">
            <div class="col col-md-12">
                <label asp-for="@Model.EmailAddress" class="form-label">To:</label>
                <textarea type="email" readonly class="form-control" asp-for="@Model.EmailAddress" rows="3"></textarea>
            </div>
        </div>
        <div class="row row-cols-1 g-3">
            <div class="col">
                <label asp-for="@Model.EmailSubject" class="form-label">Subject:</label>
                <input type="text" class="form-control" asp-for="@Model.EmailSubject" />
            </div>
            <div class="col">
                <label asp-for="@Model.EmailBody" class="form-label">Message:</label>
                <textarea class="form-control" rows=10 asp-for="@Model.EmailBody" required></textarea>
            </div>
            <div class="col text-end">
                <button class="btn btn-primary rounded-pill btnLink" type="submit">Send</button>
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>